<script>

$(document).foundation({
  orbit: {
    animation: 'slide',
    timer_speed: 3000,
    pause_on_hover: true,
    animation_speed: 700,
    navigation_arrows: true,
    bullets: true,
    slide_number: false,
    timer: false
  }
});

var mn = $("#menu-dropdown-nav");

$("#button-dropdown").click(function(){

var newHeight = mn.find('#menu-primary').height()+10;

  if (mn.hasClass("active")){
    mn.animate({opacity:0},100,function(){
    mn.animate({height:0},100,function(){
    $('#menu-primary').css({"marginLeft":"10"});
    $('#menu-secondary').css({"marginLeft":"100%"});
    mn.css("opacity","0");
    });
    });
  }
  else {
    mn.animate({height:newHeight},200,function(){
    mn.animate({opacity:1},400);
    });
  }
  mn.toggleClass("active");
});

$(".button-secondary-nav").click(function(){

  $('#menu-primary').animate({marginLeft:'-100%'}, 100);
   
  var newHeight = $('#menu-secondary').height();

  $('#menu-secondary').animate({marginLeft:10},300);
  mn.animate({height:newHeight},300);

});


$(".button-primary-nav").click(function(){

  $('#menu-secondary').animate({marginLeft:'100%'}, 100);
   
  var newHeight = $('#menu-primary').height();

  $('#menu-primary').animate({marginLeft:'10'},300);
  mn.animate({height:newHeight},300);

});


$(".button-more").click(function(){

  $('#menu-primary').animate({marginBottom:'100%'}, 100);

});

</script>
<script>


$('.tab-accordion').each(function(){

  var acc = $(this).next('div');

if(!acc.attr('initH')) acc.attr('initH', (acc.height()+20));

acc.css({"height":"0","display":"none"});

});
    

$('.tab-accordion').click(function() {


var toggle = $(this).next('div');
  
  if($(this).next('div').height() != 0) {
    $(this).removeClass("active");
    TweenLite.to(toggle, .2, {css:{opacity:0},onComplete:function(){
      TweenLite.to(toggle, .4, {css:{height: 0},ease:Expo.easeInOut,onComplete:function(){
        toggle.css("display","none");
        
      }});
  }});
  }
  else {
    toggle.css({"display":"block","opacity":"0"});
    $(this).addClass("active");
    TweenLite.to(toggle, .4, {css:{height: toggle.attr('initH')},ease:Expo.easeInOut,onComplete:function(){

TweenLite.to(toggle, .4, {css:{opacity:1}});

    }});
  }
});
</script>


<script>

$('#button-refine').click(function(){

  var tr = $('.tab-refine');
  var br = $('#button-refine');
  

  if (br.hasClass("active")){
    br.removeClass("active");
    newHeight = 0;
    tr.fadeOut(500);
    tr.animate({height:"0"},600, function(){
    $('#tab-primary').css({"marginLeft":"0", "opacity":"1"});
    $('#tab-secondary').css({"marginLeft":"-100", "opacity":"0"});
    });
  }
  else {
    tr.animate({height:"192px"}, 400,function(){
    br.addClass("active"); 

    });
    tr.fadeIn(500);    
  }
});

$('.tab-primary-nav').click(function(){

  var tp = $('#tab-primary');
  var ts = $('#tab-secondary');
  var tr = $('.tab-refine');
  var currTab = tp;

  tp.animate({marginLeft:'-100'}, 100);
  
  var newHeight = ts.height()+22;

  ts.animate({marginLeft:'0'}, 300);
  tr.animate({height:newHeight}, 300);

  ts.fadeIn(50);
  tp.fadeOut(50);

  currTab = ts;

  $('.button-back').click(function(){
    ts.animate({marginLeft:'100%'}, 100);

    var newHeight = tp.height()+22;

    tp.animate({marginLeft:'0'}, 300);
    tp.fadeIn(50);
    ts.fadeOut(50);
    tr.animate({height:newHeight}, 300);

    currTab = tp;
  });
});

</script>


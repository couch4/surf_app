<script>

$('#button-refine').click(function(){

  var rt = $('.refine-tab');
  var br = $('#button-refine');
  

  if (br.hasClass("active")){
    br.removeClass("active");
    newHeight = 0;
    rt.fadeOut(500);
    rt.animate({height:"0"},600);
  }
  else {
    rt.animate({height:"45px"}, 400,function(){
    br.addClass("active"); 

    });
    rt.fadeIn(500); 
      
  }



});

</script>

